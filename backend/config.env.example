# 이 파일을 config.env로 복사하고 실제 값을 입력하세요
# Copy this file to config.env and fill in the actual values

# Server Configuration
PORT=3001

# JWT Secret (32자 이상의 강력한 랜덤 문자열 사용)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your_strong_random_secret_key_here_minimum_32_characters

# Email Configuration (Gmail App Password)
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_gmail_app_password

# Frontend URL (for CORS)
REACT_APP_API_URL=http://localhost:3001/api

# Supabase Database
DATABASE_URL=postgresql://postgres:[YOUR_PASSWORD]@[YOUR_PROJECT].supabase.co:5432/postgres
DB_PASSWORD=your_database_password
SUPABASE_URL=https://[YOUR_PROJECT].supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Chat Encryption (32자 이상 권장)
CHAT_ENCRYPTION_KEY=your_chat_encryption_key_minimum_32_characters

# Scheduler (optional)
SCHEDULER_INTERVAL=*/10 * * * * *

