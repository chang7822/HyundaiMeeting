<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- 기본 설정: 모든 HTTPS 연결 허용 (시스템 및 사용자 인증서 모두 신뢰) -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system" />
            <certificates src="user" />
        </trust-anchors>
    </base-config>
    <!-- 개발 환경: 개발자 PC IP에 대한 HTTP 허용 -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">192.168.0.13</domain>
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">127.0.0.1</domain>
        <domain includeSubdomains="true">10.0.2.2</domain>
    </domain-config>
    <!-- 운영 환경: Render 서버 HTTPS 허용 -->
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">onrender.com</domain>
        <domain includeSubdomains="true">auto-matching-way-backend.onrender.com</domain>
        <trust-anchors>
            <certificates src="system" />
            <certificates src="user" />
        </trust-anchors>
    </domain-config>
</network-security-config>

